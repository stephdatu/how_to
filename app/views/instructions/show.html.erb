<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @instruction.name %>
</p>

<p>
  <b>Description:</b>
  <%= @instruction.description %>
</p>

<ul id='tasks'>
  <% @instruction.tasks.each do |task| %>
    <li>
      #<%= task.id %> -
      <%= link_to task.task, [@instruction, task] %>
    </li>
  <% end %>
</ul>

<%= link_to 'New Task', new_instruction_task_path(@instruction) %> <br>
<%= link_to 'Edit Instructions', edit_instruction_path(@instruction) %> |
<%= link_to 'Delete Instructions', instruction_path(@instruction),
    :method => :delete, :confirm => "Are you sure you want to delete this instruction?" %>
<%= link_to 'Back', instructions_path %>
